{;;;; Set this to one of `:debug`, `:info`, `:warn`, `:error`, `:critical`. The higher the specified
 ;;;; level, the fewer messages will be written to the log. (Required)
 :log-level :info

 ;;;; The filename (relative to DROID's root directory) where the log will be written to (Optional;
 ;;;; if unspecified or set to nil, DROID's log is written to `STDERR`).
 ;; :log-file "droid.log"

 ;;;; If set to true, `https:` protocol will be used, otherwise DROID will use `http:`. (Optional;
 ;;;; default: true).
 ;; :insecure-site true

 ;;;; The port that the server will listen on. (Required)
 :server-port 8000

