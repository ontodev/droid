 ;; :cgi-timeout 10000

 ;; Fallback docker configuration for projects that do not include their own. (Required)
 :docker-config {;;;; If set to true, projects that do not define their own docker configuration
                 ;;;; will not use docker containers. Projects that _do_ specify their own docker
                 ;;;; configuration, with `:disabled?` set to `false` in their project-specific
                 ;;;; docker configuration, will still use docker containers. (Optional; docker is
                 ;;;; enabled by default).
                 ;; :disabled? false
                 ;;;; The docker image to use when creating containers. Individual
                 ;;;; branches of a project may override this by including a `Dockerfile`
                 ;;;; at the root of their workspace directory. (Required when docker is enabled)
                 :image "debian"
                 ;;;; The path to the root workspace directory within a container. (Required when
                 ;;;; :docker is enabled)
                 :workspace-dir "/workspace/"
                 ;;;; The path to the temporary directory within a container. (Required when
                 ;;;; docker is enabled).
                 :temp-dir "/tmp/droid/"
                 ;;;; The directory relative to which DROID commands should be run by
                 ;;;; default within the container, if not otherwise specified. (Required when
                 ;;;; docker is enabled).
                 :default-working-dir "/workspace/"
                 ;;;; The program name of the shell to be used when running commands. (Required when
                 ;;;; :disabled? is false).
                 :shell-command "sh"
                 ;;;; Extra environment variables passed to containers when running
                 ;;;; commands. (Optional; defaults to no environment variables).
                 ;; :env {"ENV_VAR1" "env_var1_value",
                 ;;       "ENV_VAR2" "env_var2_value"}
                 }

 ;;;; Set to true if you would like to remove docker containers automatically at server shut down.
 ;;;; Note that even without this flag set, docker containers will be *paused* on server shutdown.
 ;;;; (Optional; default: false)
 ;; :remove-containers-on-shutdown false

 ;;;; If set to true, DROID will authenticate to GitHub using a personal access token read from the
 ;;;; environment variable PERSONAL_ACCESS_TOKEN, which must be set. (Optional; defaults to false)
 ;; :local-mode false

 ;;;; The ID of the GitHub App to use for authentication to GitHub when not running in local mode.
 ;;;; (Required when :local-mode is set to false; comment out otherwise)
 :github-app-id 55555

 ;;;; The file, relative to DROID's root directory, containing the private key to use for
 ;;;; authenticating with the GitHub App when not running in local mode. (Required when :local-mode
 ;;;; is set to false; comment out otherwise)
 :pem-file "FILE.pem"

 ;;;; If set to true, then pushes to GitHub will use an installation token provided through the
 ;;;; GitHub App for the repository. Otherwise pushes will use the user's user access token
 ;;;; (which is also authenticated via the GitHub App). Note that if `:local-mode` is set to true,
 ;;;; the personal access token will be used in lieu of the installation token. (Optional; defaults
 ;;;; to false)
 ;; :push-with-installation-token false

